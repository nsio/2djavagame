<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="br.com.expurgacao.riverblaze.splash" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application android:allowBackup="true"
        android:icon="@drawable/expurga"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".SplashVideo"
            android:label="River Blaze"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.expurgacao.riverblaze.Game" android:screenOrientation="landscape" />
        <activity android:name="br.com.expurgacao.riverblaze.menu.Menu" android:screenOrientation="landscape" />
        <activity android:name="br.com.expurgacao.riverblaze.splash.abertura.IlustraAbertura" android:screenOrientation="landscape" />
    </application>

</manifest>
